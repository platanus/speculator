#!/usr/bin/env bash
trap "exit" INT

DOCKE_COMPOSE_ARGS="-f docker-compose.ci.yml run"

function test_mysql {
  docker-compose $DOCKE_COMPOSE_ARGS test sh -c 'nc -z $MYSQL_HOST $MYSQL_PORT'
}

count=0
# Chain tests together by using &&
until ( test_mysql && echo "Services ready" )
do
  ((count++))
  if [ ${count} -gt 50 ]
  then
    echo "Services didn't become ready in time"
    exit 1
  else
    echo "Waiting for services to become ready..."
  fi
  sleep 0.2
done

# Only run bundle install when running locally
if [ -z "$CI" ];
then
  docker-compose $DOCKE_COMPOSE_ARGS test bundle install
fi

# Prepare and run the specs
docker-compose $DOCKE_COMPOSE_ARGS test bundle exec rake db:setup
docker-compose $DOCKE_COMPOSE_ARGS test bundle exec rspec spec
