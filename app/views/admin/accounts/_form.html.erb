<%= semantic_form_for [:admin, @account], builder: ActiveAdmin::FormBuilder do |f| %>
  <%= f.inputs "Details" do %>
    <% if @account.new_record? %><%= f.input :robot %><% end %>
    <%= f.input :name %>
    <%= f.input :exchange, as: :select, collection: [ 'surbtc', 'bitstamp', 'bitfinex', 'game' ] %>
    <%= f.input :base_currency %>
    <%= f.input :quote_currency %>
  <% end %>
  <% if @account.new_record? %>
    <%= f.inputs "Credentials" do %>
      <%= f.input :credentials, as: :text %>
    <% end %>
  <% end %>
  <%= f.actions do %>
    <%= f.action(:submit) %>
    <%= f.cancel_link %>
  <% end %>
<% end %>

<% unless @account.new_record? %>
  <%= semantic_form_for [:admin, @account], builder: ActiveAdmin::FormBuilder do |f| %>
    <%= f.inputs "Change Credentials" do %>
      <%= f.input :credentials, as: :text, input_html: { value: '' } %>
    <% end %>
    <%= f.actions do %>
      <%= f.action(:submit) %>
      <%= f.cancel_link %>
    <% end %>
  <% end %>
<% end %>
